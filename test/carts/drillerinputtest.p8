btnbits = 0
function _update()
 btnbits=0
 for i=0,5 do
  if btn(i) then
   btnbits+=2^i
  end
 end
end

function _draw()
 cls()
 print(btnbits)
 print(btn())
 print(btnp())
 leftband = band(btnbits,1);
 rightband = band(btnbits,2);
 print(leftband)
 print(rightband)
 if leftband>0 then
    print("moving left")
 end
 if rightband>0 then
    print("moving right")
 end
end
