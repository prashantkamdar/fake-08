pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _init()
	--first sfx byte
	sfxbyte = peek(0x3200)
	--send sfx byte to sprite sheet
	poke(0x0004, sfxbyte)
	--read spr byte to verify
	sprbyte = peek2(0x0004)
	--set all sprite flags to 1
	memset(0x3000, 1, 0xff)
	--read sprite flag to verify
	flag = fget(200)
	--copy sprite flags to map
	memcpy(0x2000, 0x3000, 128)
end

function _draw()
	cls()
	print(sfxbyte)
	print(sprbyte)
	spr(1, 20, 0)
	print(flag)
	map(0, 0, 0, 120, 8, 1)
end
